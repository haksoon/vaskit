<div style="color:#555; font-size:14px; line-height:22px; text-align:left; padding:20px; ">
	로그인 완료. 유저 이메일 : <%= current_user.email %>
	<a data-method="delete" rel="nofollow" href="/users/sign_out" style="background-color:#ccc;">
		로그아웃
	</a> 
	
	<br />
	
	<a href="/asks/new" class="round_button" style="display:block; background-color:#e6b621; color:#fff; font-weight:bold; border:none; margin:20px 0 40px 0; text-align:center;">
		질문 새로 만들기
	</a>
	
	<div id="asks"></div>
	
</div>

<script type="text/template" id="ask-template">
	{{ left_ask_deal = ask.left_ask_deal }}
	{{ right_ask_deal = ask.right_ask_deal }}
	<div style="border-top:1px solid #ff0000; padding-top:10px; margin-top:20px;">
		{{ if( ask.category){ }}
			{{= ask.category.name }} <br />
		{{ } }}
		{{ if( ask.user){ }}
			@{{= ask.user.string_id }} <br />
		{{ } }}
		{{= ask.message }} <br />
		<table cellspacing="0" cellpadding="0" style="width:100%; text-align:center; border-collapse:collapse;" class="border_ababab">
			<tr>
				<td style="width:50%;">
			  		<img src='{{= get_image_url(left_ask_deal, "ask_deals", "normal") }}' style="width:100%;" />
				</td>
				<td style="width:50%;">
					<img src='{{= get_image_url(right_ask_deal, "ask_deals", "normal") }}' style="width:100%;" />
				</td>
			</tr>
			<tr><td>{{= left_ask_deal.title }}</td><td>{{= right_ask_deal.title }}</td></tr>
			<tr><td>{{= left_ask_deal.brand }}</td><td>{{= right_ask_deal.brand }}</td></tr>
			<tr><td>{{= left_ask_deal.price }}</td><td>{{= right_ask_deal.price }}</td></tr>
			<tr><td>{{= left_ask_deal.spec1 }}</td><td>{{= right_ask_deal.spec1 }}</td></tr>
			<tr><td>{{= left_ask_deal.spec2 }}</td><td>{{= right_ask_deal.spec2 }}</td></tr>
			<tr><td>{{= left_ask_deal.spec3 }}</td><td>{{= right_ask_deal.spec3 }}</td></tr>
		</table>
	</div>
</script>


<script> 

	var asks = <%= raw @asks.to_json %>;
	var askTemplate = _.template( $('#ask-template').html() );
	for(var i=0; i < asks.length; i++) {
		var ask = asks[i]
        $('#asks').append(askTemplate({ask: ask}));
	}
</script>

