  				{{ comment = ask.comments[i] }}
  				{{ var askCommentTemplate = _.template($('#ask-comment-template').html()) }}
  		    {{= askCommentTemplate({ask:ask, comment: comment}) }}
  			{{ } }}
        {{ if(ask.comments.length == 0) { }}
          <p style="position: absolute; top: 50%; left: 50%; color: #9d9ea1; font-size: 13px; width: 200px; margin-top: -16px; margin-left: -100px;" id="no_comment_{{=ask.id}}">아직 남겨진 의견이 없네요.<br>소중한 한마디 부탁드립니다:)</p>
        {{ } }}
