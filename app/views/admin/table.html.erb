<div style="width:1000px; margin:0 auto; text-align:center;">
	<% @tables.each do |table| %>
		<a href="/admin/table/<%=table%>" style="display:inline-block; background-color:#e6b621; color:white; text-decoration:none; padding:8px;"><%=table%></a>
	<% end %>
</div>


<% if @records.blank?%>
	<p style="margin:0 auto; padding:200px 0; width:100%;text-align:center;">
		데이터가 없습니다.
	</p>
	<% else %>
	
	<table border="1" cellspacing="0" cellpadding="2" style="width: 100%; margin-top:20px; font-size:12px; text-align:center;">
	  <thead>
	    <tr>
	      <% @record_names.each do |name| %>
	      	<th><%=name%></th>
	      <% end %>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @records.each do |record| %>
			<tr>
				<% @record_names.each do |name| %>
			    	<td><%=record[name]%></td>
			    <% end %>
	       	</tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>
