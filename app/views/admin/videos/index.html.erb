<div class="jumbotron clearfix">
  <h1>비교영상 목록</h1>
  <p>비교영상을 생성하거나 수정, 삭제할 수 있습니다</p>
  <%= link_to '새로운 비교영상 생성하기',
              new_admin_video_path,
              { class: 'btn btn-success btn-lg pull-right' } %>
</div>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">비교영상 전체목록</div>

  <!-- Table -->
  <table class="table table-bordered table-responsive table-striped table-hover">
    <thead>
      <tr>
        <th style="width: 5%;">ID</th>
        <th style="width: 20%;">생성일</th>
        <th style="width: 15%;">VASKIT</th>
        <th style="width: 15%;">페이스북</th>
        <th style="width: 15%;">조회</th>
        <th style="width: 15%;">수정</th>
        <th style="width: 15%;">발행</th>
      </tr>
    </thead>
    <tbody>
      <% @videos.each do |video| %>
        <tr>
          <th><kbd><%= video.id %>번</kbd></th>
          <td class="text-center"><%= format_datetime(video.created_at, 'past') %></td>
          <td>
            <%= link_to 'VASKIT',
                        video_path(video.id),
                        { class: 'btn btn-default btn-block', target: '_blank' } %></td>
          <td>
            <%= link_to '페이스북',
                        "http://www.facebook.com/vaskit.kr/videos/#{video.url}",
                        { class: 'btn btn-default btn-block', target: '_blank' } %></td>
          <td>
            <%= link_to '조회',
                        admin_video_path(video.id),
                        { class: 'btn btn-info btn-block' } %></td>
          <td>
            <%= link_to '수정',
                        edit_admin_video_path(video.id),
                        { class: 'btn btn-warning btn-block' } %></td>
          <td>
            <% if video.show %>
              <%= link_to '발행취소', admin_video_path(video.id), { class: 'btn btn-danger btn-block', method: :delete, data: { confirm: '정말로 발행을 취소하시겠어요?', disable_with: '취소중...' } } %>
            <% else %>
              <%= link_to '발행하기', admin_video_path(video.id), { class: 'btn btn-success btn-block', method: :delete, data: { confirm: '정말로 발행하시겠어요?', disable_with: '발행중...' } } %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= image_tag video.image.url(:original), width: '100%' %></td>
          <td><%= video.title %></td>
          <td colspan="4"><%= tagging_keywords(video.description) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Table Pagination -->
  <div class="panel-footer" style="text-align: center;">
    <%= paginate @videos %>
  </div>
</div>
