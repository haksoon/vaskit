          <p style="margin:5px auto; font-weight:normal;">{{= ask.right_ask_deal.brand != "" ? ask.right_ask_deal.brand : "-" }}</p>
        {{ } }}
        {{ if (ask.left_ask_deal.price != null || ask.right_ask_deal.price != null) { }}
