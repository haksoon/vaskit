<table class="main_header" cellspacing="0" cellpadding="0" style="position:fixed; top:0; background-color:#4b3d3d; width:inherit; overflow:visible; height:50px; z-index:10; border-top:2px solid #ee6e01;">
	<tr>
		<td style="width:60px;">
			<% if flash[:redirect_url] %>
        <a href="<%= flash[:redirect_url] %>"><img style="width:18px; padding:0px 10px; margin-bottom:-4px; margin-left:4px;" src="/images/common/backward_btn.png" /></a>
      <% else %>
        <a href="#" onclick="back_button(); return false;"><img style="width:18px; padding:0px 10px; margin-bottom:-4px; margin-left:4px;" src="/images/common/backward_btn.png" /></a>
      <% end %>
		</td>
		<td style="text-align:center;">
			<a href="/" style="display:block; font-size:28px; color:#FFFFFF; margin:0 auto; margin-top:3px;">
				<img src="/images/etc/logo_1.png" style="width:130px; margin-bottom:-1px;"/>
			</a>
		</td>
		<td style="width:60px;">
			<% if current_user %>
				<a href="#" onclick="user_on(); return false;" style="position:relative; display:block;">
					<% unless Alram.where(:user_id => current_user.id, :is_read => false).blank? %>
						<img src="/images/common/new.png" style="position:absolute; top:0px; right:14px; width:16px;"/>
					<% end %>
					<img style="width:48px; padding:0 4px; display:block;" src="/images/header/my.png" />
				</a>
			<% else %>
				<a href="/etc/landing"><img style="width:50px; padding:3px 10px; margin-bottom:-4px; margin-left:4px;" src="/images/header/login.png" /></a>
			<% end %>
		</td>
	</tr>
</table>
<div id="menu_pc_bg" onclick="user_off(); search_input_off(); return false;" style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:1; display:none;"></div>
<div id="menu_bg" onclick="user_off(); search_input_off(); return false;" style="position:fixed; top:0; width:inherit; height:100%; background-color:#000; z-index:8; opacity:0.6; display:none;"></div>
