<table class="main_header" cellspacing="0" cellpadding="0">
	<tr>
		<td style="width:60px;">
			<% if flash[:redirect_url] %>
        <a href="<%= flash[:redirect_url] %>" style="display:block; width:60px; height:50px;"><i class="fa fa-angle-left" style="color: #fff; font-size: 40px; padding-top: 3px;"></i></a>
      <% else %>
        <a href="#" onclick="back_button(); return false;" style="display:block; width:60px; height:50px;"><i class="fa fa-angle-left" style="color: #fff; font-size: 40px; padding-top: 3px;"></i></a>
      <% end %>
		</td>
		<td style="width:100%;">
			<a href="/" style="display:inline-block; margin-top:4px; padding:5px;">
				<img src="/images/etc/logo_1.png" style="height:25px;"/>
			</a>
		</td>
		<td style="width:60px;">
			<% if current_user %>
				<a href="#" onclick="user_on(); return false;" style="display:block; width:60px; height:50px;">
					<i class="fa fa-user" style="color: #fff; font-size: 30px; padding-top: 12px;"></i>
					<span style="position: absolute; bottom: 11px; right: 23px; color: #4b3d3d; font-size: 10px; font-weight: bold;">my</span>
					<% unless Alram.where(:user_id => current_user.id, :is_read => false).blank? %>
						<img src="/images/header/new.png" style="position:absolute; top:7px; right:9px; width:14px;"/>
					<% end %>
				</a>
			<% else %>
				<a href="/etc/landing"><img style="width:50px; padding:3px 10px; margin-bottom:-4px; margin-left:4px;" src="/images/header/login.png" /></a>
			<% end %>
		</td>
	</tr>
</table>
<div id="menu_pc_bg" onclick="user_off(); search_input_off(); return false;" style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:1; display:none;"></div>
<div id="menu_bg" onclick="user_off(); search_input_off(); return false;" style="position:fixed; top:0; width:inherit; height:100%; background-color:#000; z-index:8; opacity:0.6; display:none;"></div>
