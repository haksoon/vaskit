<a id="share_popup_bg" href="#" onclick="hide_share_popup(); return false;" style="display:block; position:fixed;left:0; top:0; width:100%; height:100%; background-color:black; z-index:12; opacity:0.6; display:none;"></a>
<div id='share_popup' style='width:240px; z-index:13; position:fixed; left:50%; top:50%; margin-left:-120px; margin-top:-110px; overflow-y:hidden; overflow-x:hidden; display:none;'>
	<a href="#" onclick="hide_share_popup(); return false;" style="position:absolute; right:11px; top:11px;"><img style="width:18px;" src="/images/header/menu_off.png" /></a>
	<p style="background-color:#4b3d3d; font-size:15px; color:#FFF; font-weight:bold; height:40px; line-height:40px; margin:0;">공유하기</p>
	<div style="background-color:#f4f4f4;">
		<p style="color:#9d9ea0; font-size:12px; margin:0; padding:14px 0 8px 0;">버튼을 눌러 해당 SNS로 공유하세요.</p>
		<a id="share_katalk_btn" href="#"><img src="/images/etc/kakao_talk.png" style="width:60px;margin-right:3px;" /></a>
		<a href="#" onclick="share_facebook(); return false;"><img src="/images/etc/facebook.png" style="width:60px;margin-left:3px;" /></a>
		<p style="color:#9d9ea0; font-size:12px; margin:0; padding-top:10px;">또는 아래 주소를 복사하세요.</p>
		<div style="padding:12px 16px 16px 16px;">
			<p id="share_url" style="border:1px solid #dbdbdb; margin:0; padding:6px; color:#383838; font-size:13px;">
				http://vaskit.kr/asks/1
			</p>
		</div>
	</div>
</div>

<script>
	function show_share_popup(ask_id,user_string_id, left_deal_title, right_deal_title){
		$("#share_url").html("http://vaskit.kr/asks/"+ask_id);
		$("#share_katalk_btn").attr("onclick","share_katalk('"+user_string_id+"','"+left_deal_title+"','"+right_deal_title+"'); return false;")
		$("#share_popup_bg").show();
		$("#share_popup").show();
	}
	
	function hide_share_popup(){
		$("#share_popup").hide();
		$("#share_popup_bg").hide();
	}
	
	
	function share_facebook(){
		if (typeof(FB) != 'undefined' && FB != null ) {
			  FB.init({
			    appId      : '<%=Facebook::CONFIG["app_id"]%>',
			    status     : true,
			    xfbml      : true,
			    version    : 'v2.5' // or v2.0, v2.1, v2.2, v2.3
			  });
		} 
		var share_url = $("#share_url").html();
		FB.ui({
			method: 'share',
			href: share_url,
		}, function(response){});
	}
	
	
	function share_katalk(user_string_id, left_deal_title, right_deal_title){
		try{
			Kakao.init("91c2c2e69d89a8617cfedd3e61b041ca");
		}catch(err) {
		}
		
		var share_url = $("#share_url").html();
		var image_url = "http://vaskit.kr/images/etc/share_image.png";
		var label = "@"+user_string_id+"님을 도와주세요! 머리가 빠져가고 있습니다...\n\n'"+left_deal_title+"' vs '"+right_deal_title+"', 무엇을 사야 후회하지 않을까요?\n\n 형님, 누님, 친구님들! 저의 결정장애에 도움을 주세요!\n\n"+share_url;
		Kakao.Link.sendTalkLink({
	      	label: label,
	      	image: {
	        	src:  image_url,
	        	width: '470',
	        	height: '246'
	      	},
	      	webButton: {
	        	text: "VASKIT으로 가기",
	        	url: share_url
	      	}
	    });
	}
</script>