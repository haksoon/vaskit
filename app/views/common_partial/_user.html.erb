					{{ var comment_owner_user = comment_owner_users[i] }}
					{{ var ask_owner_user = ask_owner_users[i] }}
					{{ var left_ask_thumbnail = left_ask_thumbnails[i] }}
					{{ var right_ask_thumbnail = right_ask_thumbnails[i] }}
					{{ if (alram.alram_type.match("vote_")) { }}
						<a id="alram_{{=alram.id}}" href="#" onclick="alram_go_url({{=alram.id}}, {{=alram.ask_id}}); return false;" class="table_div" style="margin-bottom:0; background-color:{{= alram.is_read ? '#fff' : 'rgba(255,228,169,0.6)' }}; color:#666; border-bottom:1px solid #dbdbdb; display:block; padding:10px 115px 10px 15px; min-height:42px; text-align:left; transition:all .5s;">
