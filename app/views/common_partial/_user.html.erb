<script>
	<% if flash[:custom_notice] %>
		notify('<%=flash[:custom_notice]%>');
	<% end %>

	function user_on(){
		disableScroll();
		var new_user = "<%= render :partial => 'common_partial/my' %>"
		$("#user_overlay").html(new_user);
		$("#user_overlay").show();
		$("#menu_pc_bg").show();
		$("#menu_bg").show();

		$("#category_overlay").hide();
		$("#search_overlay").hide();
		$('#search_input').val("");
		$("#keyword_reset_btn").hide();
	}

	function user_off(){
		enableScroll();
		$("#user_overlay").hide();
		$("#menu_pc_bg").hide();
		$("#menu_bg").hide();
	}

</script>
