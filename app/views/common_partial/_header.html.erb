<table id="main_header" cellspacing="0" cellpadding="0">
	<tr>
		<td style="width:60px;">
			<span style="display:block; width:60px; height:50px;">
				<a id="category_button" href="#" onclick="category_on(); return false;" style="display:block; box-sizing:border-box; width:60px; height:50px; padding-left:10px;"><i class="fa fa-navicon" style="color: #fff; font-size: 26px; padding-top: 12px;"></i></a>
				<a id="back_button" href="#" onclick="header_back_button(); return false;" style="display:block; position:absolute; top:0; left:0; box-sizing:border-box; width:60px; height:50px; padding-left:10px;"><i class="fa fa-angle-left" style="color: #fff; font-size: 40px; padding-top: 3px;"></i></a>
			</span>
		</td>
		<td style="width:100%; padding-right:10px;">
			<a href="#" onclick="go_url('/'); return false;" style="display:inline-block; margin-top:4px; padding:5px;">
				<img src="/images/logo/logo_1.png" style="width:auto; height:30px;"/>
				<span style="position:absolute; top:27px; left:50%; margin-left:70px; color:#ffcc5a; font-size:11px; font-weight:bold;">BETA</span>
			</a>
		</td>
		<td style="width:60px;">
			<% if current_user %>
				<a href="#" onclick="user_on(); return false;" style="display:block; box-sizing:border-box; width:60px; height:50px; padding-right:10px;">
					<i class="fa fa-user" style="color: #fff; font-size: 30px; padding-top: 12px;"></i>
					<span style="position: absolute; bottom: 11px; right: 28px; color: #4b3d3d; font-size: 10px; font-weight: bold;">my</span>
					<span id="new_alram_icon" style="position:absolute; top:9px; right:10px; width:10px; height:10px; line-height:10px; text-align:center; background-color:#ee6e01; border-radius:10px; font-size:10px; font-weight:bold; color:#fff; padding:3px 2px 1px; transition:transform .5s; transform:scale(0); -webkit-transform:scale(0);"></span>
				</a>
			<% else %>
				<a href="#" onclick="go_url('/landing'); return false;" style="display: block; box-sizing: border-box; width: 60px; height: 50px; padding-top: 14px; padding-right: 10px;">
					<p style="color:#fff;margin: 0 auto;padding: 2px 4px;border: 2px solid #fff;border-radius: 5px;font-size: 12px;font-weight: bold;box-sizing: border-box;display: inline-block;">Login</p>
				</a>
			<% end %>
		</td>
	</tr>
</table>
<% unless title.blank? %>
	<p style="box-sizing:border-box; height:40px; margin:0; padding:2px 10px 0px; font-size:16px; font-weight:bold; color:#fff; background-color:#998674; text-align:center; line-height:40px;"><%= title %></p>
<% end %>
<div id="menu_pc_bg" onclick="back_button(); return false;"></div>
<div id="menu_bg" onclick="back_button(); return false;"></div>
<%= render :partial => "common_partial/user" %>

<script>
	function main_header_left_button() {
		if ( window.location.pathname == "/" && window.location.search == "" ) {
			$("#category_button").show();
			$("#back_button").hide();
		} else {
			$("#category_button").hide();
			$("#back_button").show();
		};
	}
	main_header_left_button();

	// AJS추가 : 유저 알림 정보 불러오기
	var alram_count;
	var last_alram_count;
	<% if current_user %>
		function alram_check() {
		  $.ajax({
		    url: "/users/alram_check.json",
		    type: "GET",
		    data: {},
		    dataType: 'json',
		    error: function(){
		      return false;
		    },
		    success: function(data){
					alram_count = data.alram_count;
					alram_count > 0 ? $("#new_alram_icon").css("transform","scale(1)").text(alram_count) : $("#new_alram_icon").css("transform","scale(0)").text(alram_count);
					if (last_alram_count != null && alram_count > last_alram_count && !is_user_opened && !$.cookie('gcm_key')) notify('새로운 알림이 있어요<br>확인해 보세요!');
		    },
		    beforeSend: function(){
		    },
		    complete: function(){
					last_alram_count = alram_count;
				}
		  });
		}
		alram_check();
		setInterval("alram_check()", 60000);
	<% end %>

</script>
