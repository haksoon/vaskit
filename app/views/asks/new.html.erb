<%= render 'form' %>

<script>
  history.pushState(null, null, "#new");
  $(window).bind("hashchange", function(){
    if (is_user_setting_opened || is_user_opened) {
      if (is_user_setting_opened) manage_off();
      if (is_user_opened) user_off();
    } else {
      return false;
    }
  });
  $(document).keydown(function(e){
    if(e.target.nodeName != "INPUT" && e.target.nodeName != "TEXTAREA"){
      if(e.keyCode === 27){
        if (is_user_setting_opened) {
          history.back();
        } else if (is_user_opened) {
          history.back();
        }	else {
          return false;
        }
      }
    }
  });
</script>
