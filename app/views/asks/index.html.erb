<h1>포스트 리스트</h1>

<%= link_to '새 포스트 만들기', new_post_path, :style =>"text-decoration: underline;" %>

<table border="1" style="width: 100%;">
  <thead>
    <tr>
      <th>content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="text-align:left;"><%=raw post.content.gsub(/\n/, '<br/>').gsub(/^(.{70,}?).*$/m,'\1...') %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

